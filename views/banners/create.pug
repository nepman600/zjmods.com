extends ../backend

block content
    h1 Create banner
    - if(err)
        div(class="alert alert-danger")
            strong=err

    form(action="/admin/banner/create" method="POST" encType="multipart/form-data" id='bannerForm')
        div(class="form-group")
            label(class="control-label" for="img") Image
            input(type="file" id="img" class="form-control" name="img" required)
        div(class="form-group")
            label(class="control-label" for="sort") Sort
            input(type="text" id="sort" class="form-control" name="sort" required)
        div(class="form-group")
            label(class="control-label" for="title") Title
            input(type="text" id="title" class="form-control" name="title")
        div(class="form-group")
            label(class="control-label" for="link") Link
            input(type="text" id="link" class="form-control" name="link")
        div(class="form-group")
            label(class="control-label" for="sort") Desc
            textarea(id="desc" class="form-control" name="desc" rows="4")

        div.form-group
            button(type="submit" class="btn btn-primary" name="button") Create
