extends ../backend

block content
    h1 Clients
    p
        a(class="btn btn-success" href="/admin/clients/create") Create Client
    table(class="table table-striped table-bordered")
        thead
            tr
                th #
                th Hash
                th Expire
                th Ban
                th.action-column &nbsp;
            tr.filters
                td &nbsp;
                td
                    input(type="text" class="form-control" name="search_client" onkeypress="searchClient(event, this)" value=searchID)
                td &nbsp;
                td &nbsp;
                td &nbsp;
        tbody
            - var clients = data;
            for client in clients
                tr
                    td
                    td=client.hash
                    td=client.expire
                    td=client.ban
                    td
                        a(href="/admin/clients/edit/" + client.id)
                            span(class="glyphicon glyphicon-pencil") &nbsp;
                        //a(onclick="delClient('" + client.id + "')")
                             span(class="glyphicon glyphicon-trash")

    script(type='text/javascript' src='/js/backend.js')




