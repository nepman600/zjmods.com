extends ../backend

block content
    h1 Create Client
    - if(err)
        div(class="alert alert-danger")
            strong=err

    form(action="/admin/clients/create" method="POST")
        div(class="form-group")
            label(class="control-label" for="gameID") gameID
            input(type="text" id="gameID" class="form-control" name="gameID" required)
        //div(class="form-group")
            label(class="control-label" for="expire") Expire
            input(type="text" id="expire" class="form-control" name="expire" required)

        div(class="form-group")
            label(class="control-label" for="ban") Ban &nbsp;
            select(name="ban" id="ban")
                option(disabled) Ban
                option(value="false" selected) Нет
                option(value="true") Да

        div.form-group
            button(type="submit" class="btn btn-primary" name="button") Create